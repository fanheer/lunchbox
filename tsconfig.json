{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true, 
      "allowJs": true,
      "jsx": "react",
      "lib": ["es6", "dom"],
      "module": "esnext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./dist",
      "sourceMap": true,
      "strict": true,
      "target": "es5",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
    },
    "exclude": [
      "node_modules",
      "build",
    ],
    "include": ["src/**/*", "*.*"],
}